<h2>Edit this Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for="title">Title: </label>
  <input type="text" name="title" value={{movie.title}} />

  <label for="genre">Genre: </label>
  <input type="text" name="genre" value={{movie.genre}} />

  <label for="plot">Plot: </label>
  <input type="text" name="plot" value={{movie.plot}} />

  <div>
    <p>Select the cast:</p>
    {{#each movie.cast}}
      <input type="checkbox" name="cast" value={{_id}} checked />
      <label for="cast">{{name}}</label><br />
    {{/each}}
    {{#each allCelebs}}
      <input type="checkbox" name="cast" value={{_id}} />
      <label for="cast">{{name}}</label><br />
    {{/each}}
  </div>

  <button type="submit">Edit this movie</button>
</form>